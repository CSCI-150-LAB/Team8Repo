<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealerDashBoard">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cardealer"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAR DEALER DASHBOARD"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"

                        />
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/ic_launcher_background">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/cardealer"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DEALER DASHBOARD"
                                    android:textColor="#000000"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="23sp"
                                    android:layout_marginTop="10dp"

                                    />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="220dp"
                                android:layout_marginLeft ="8dp"
                                android:layout_marginRight="8dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="138dp"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="10dp"
                                    >

                                    <androidx.cardview.widget.CardView
                                        android:layout_width = "0dp"
                                        android:layout_height = "match_parent"
                                        android:layout_weight = "1"
                                        android:gravity = "center"
                                        android:layout_marginRight="6dp"
                                        android:orientation = "vertical">

                                        <RelativeLayout
                                            android:layout_width = "match_parent"
                                            android:layout_height = "match_parent">

                                            <ImageView
                                                android:layout_width = "60dp"
                                                android:id = "@+id/imageView1"
                                                android:layout_height = "60dp"
                                                android:src = "@drawable/inventory"
                                                android:layout_centerInParent = "true"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="INVENTORY"
                                                android:textSize="18sp"
                                                android:layout_below="@+id/imageView1"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"/>

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/buttonINVENTORY"
                                                android:background="@android:color/transparent"

                                                />

                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width = "0dp"
                                        android:layout_height = "match_parent"
                                        android:layout_weight = "1"
                                        android:gravity = "center"
                                        android:layout_marginLeft="6dp"
                                        android:orientation = "vertical">

                                        <RelativeLayout
                                            android:layout_width = "match_parent"
                                            android:layout_height = "match_parent">

                                            <ImageView
                                                android:layout_width = "60dp"
                                                android:id = "@+id/imageView2"
                                                android:layout_height = "60dp"
                                                android:src = "@drawable/search"
                                                android:layout_centerInParent = "true"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="SEARCH"
                                                android:textSize="18sp"
                                                android:layout_below="@+id/imageView2"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"/>

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/buttonSEARCH"
                                                android:background="@android:color/transparent"

                                                />


                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width = "0dp"
                                        android:layout_height = "match_parent"
                                        android:layout_weight = "1"
                                        android:gravity = "center"
                                        android:layout_marginLeft="6dp"
                                        android:orientation = "vertical">

                                        <RelativeLayout
                                            android:layout_width = "match_parent"
                                            android:layout_height = "match_parent">

                                            <ImageView
                                                android:layout_width = "60dp"
                                                android:id = "@+id/imageView3"
                                                android:layout_height = "60dp"
                                                android:src = "@drawable/dealericon"
                                                android:layout_centerInParent = "true"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="PROFILE"
                                                android:textSize="18sp"
                                                android:layout_below="@+id/imageView3"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"/>

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/buttonDEALERICON"
                                                android:background="@android:color/transparent"

                                                />


                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="138dp"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="10dp"
                                    >

                                    <androidx.cardview.widget.CardView
                                        android:layout_width = "0dp"
                                        android:layout_height = "match_parent"
                                        android:layout_weight = "1"
                                        android:gravity = "center"
                                        android:layout_marginRight="6dp"
                                        android:orientation = "vertical">

                                        <RelativeLayout
                                            android:layout_width = "match_parent"
                                            android:layout_height = "match_parent">

                                            <ImageView
                                                android:layout_width = "60dp"
                                                android:id = "@+id/imageView4"
                                                android:layout_height = "60dp"
                                                android:src = "@drawable/logoutsign"
                                                android:layout_centerInParent = "true"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="LOGOUT"
                                                android:textSize="18sp"
                                                android:layout_below="@+id/imageView4"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"/>

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/buttonLOGOUT"
                                                android:background="@android:color/transparent"

                                                />

                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width = "0dp"
                                        android:layout_height = "match_parent"
                                        android:layout_weight = "1"
                                        android:gravity = "center"
                                        android:layout_marginRight="6dp"
                                        android:orientation = "vertical">

                                        <RelativeLayout
                                            android:layout_width = "match_parent"
                                            android:layout_height = "match_parent">

                                            <ImageView
                                                android:layout_width = "60dp"
                                                android:id = "@+id/imageView5"
                                                android:layout_height = "60dp"
                                                android:src = "@drawable/reservation"
                                                android:layout_centerInParent = "true"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Reservation"
                                                android:textSize="18sp"
                                                android:layout_below="@+id/imageView5"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"/>

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/buttonRESERVATION"
                                                android:background="@android:color/transparent"

                                                />

                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>


                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </ScrollView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>