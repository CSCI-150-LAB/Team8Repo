<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealerX">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Dealer Ashley"
        android:gravity = "center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background = "@color/white"
        android:textColor="@color/purple_700"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:id = "@+id/call"
        android:src = "@drawable/ic_baseline_call_24"
        android:layout_marginTop = "100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft = "12dp"
        android:layout_marginEnd = "15dp"
        android:layout_marginRight = "15dp"
        />

    <TextView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/call"
        android:layout_toEndOf = "@+id/call"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="559-222-906"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/list_itemNote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item"
        android:text="Mobile"
        android:textSize="10dp"
        android:layout_alignParentEnd = "true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/call"
        android:layout_toEndOf = "@+id/call"
        android:ellipsize="end"
        android:singleLine="true"/>
    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:id = "@+id/list_email"
        android:src = "@drawable/ic_baseline_email_24"
        android:layout_marginTop = "150sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft = "12dp"
        android:layout_marginEnd = "15dp"
        android:layout_marginRight = "15dp"
        />

    <TextView
        android:id="@+id/list_itemNote3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft = "20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom = "2dp"
        android:layout_toRightOf="@+id/call"
        android:layout_toEndOf = "@+id/call"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="dealerashley@gmail.com" />

</RelativeLayout>